COLOUR_GREEN=\033[0;32m
COLOUR_RED=\033[0;31m
COLOUR_BLUE=\033[0;34m

CC		=	gcc
CFLAGS	=	-Wall -Wextra -Werror

#printf--------------------------------------------------------------------

NAME	=	ft_printf.a

SRC		=	src/ft_printf.c

OBJ		= 	$(SRC:.c=.o)

#libft---------------------------------------------------------------------



#recipes-------------------------------------------------------------------

all:		$(NAME)
#??????????????????????????????????????

$(NAME):	$(OBJ)
			ar -rcs $(NAME) $(OBJ)

clean:	
		rm -f $(OBJ)

fclean:
		rm -f $(NAME)

re:		fclean all

.PHONY:	all clean fclean re
